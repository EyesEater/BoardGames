body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  margin-top 60px !important

.navbar .dropdown-menu .form-control
  width 200px

.game-title
  text-align center

.game-button
  display none

.game-image:hover + .game-button, .game-button:hover
  display inline-block
  position absolute
  top 80%
  left 50%
  transform translate(-50%, -50%)
  text-align center
  width 200px

h4
  font-size calc(1.2rem + .4vw)

.dices-container
  float left
  position relative

.dices
  position absolute
  left 10%
  top 75%
  padding-right 30px

.dices-subcontainer
  transition all 0.3s ease-in-out

.dices-subcontainer::after
  content ''
  box-shadow 0 0 14px rgba(0,0,0,0.7)
  opacity 0
  transition opacity 0.3s ease-in-out
  position absolute
  width 100%
  height 100%
  z-index 2

.dices-subcontainer:hover
  transform scale(1.02,1.02)

.dices-subcontainer:hover::after
  opacity 1
  z-index 1

div[back-img]
  width 800px
  height 640px