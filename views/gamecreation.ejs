<%- include('header'); -%>
<h1><%= game.title %></h1>
<p><%= game.description %></p>
<% if(error) { %>
    <p><%= error %></p>
<% } %>
<div class="container">
    <div class="row">
        <div class="col-3">
            <form method="post" action="/game/create/<%= game.id %>">
                <div class="form-group">
                    <label for="inputGameType">Le type de partie:</label>
                    <select id="inputGameType" name="type" class="custom-select">
                        <option value="public" selected>Publique</option>
                        <option value="private">Privée</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="inputGameMaxPlayer">Le nombre de joueur: <%= game.maxPlayer %></label>
                    <select id="inputGameMaxPlayer" name="nbPlayer" class="custom-select">
                        <option value="2" selected>2</option>
                        <% for(let i=3; i <= game.maxPlayer; i++) { %>
                            <option value="<%= i %>"><%= i %></option>
                        <% } %>
                    </select>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Créer</button>
            </form>
        </div>
    </div>
</div>
<%- include('footer'); -%>